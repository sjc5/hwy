{
  "name": "hwy-monorepo",
  "private": true,
  "author": {
    "name": "Samuel J. Cook"
  },
  "license": "MIT",
  "description": "Monorepo for Hwy framework",
  "scripts": {
    "build:core": "pnpm -r --filter hwy run build",
    "build:dev": "pnpm -r --filter @hwy-js/dev run build",
    "build:create-hwy": "pnpm -r --filter @hwy-js/create-hwy run build",
    "build": "npm run build:dev && npm run build:core && npm run build:create-hwy",
    "dev:core": "pnpm -r --filter hwy run dev",
    "dev:dev": "pnpm -r --filter @hwy-js/dev run dev",
    "dev": "npm-run-all --parallel dev:*",
    "publish-beta": "pnpm run build && pnpm -r publish-beta"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2
  }
}
