{
  "name": "create-hwy",
  "version": "0.6.0-beta.0",
  "author": {
    "name": "Samuel J. Cook"
  },
  "license": "MIT",
  "description": "New project generator for Hwy framework",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "__common",
    "__public"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup-node index.ts --format esm",
    "lint": "tsc",
    "create-hwy": "pnpm run build && node dist/index.js",
    "publish-beta": "npm publish --tag beta",
    "publish-non-beta": "npm publish",
    "update-latest": "pnpm update --latest",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "create-hwy": "./scripts/create-hwy.js"
  },
  "dependencies": {
    "detype": "^0.6.3",
    "inquirer": "^9.2.11",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@hono/node-server": "^1.2.0",
    "@types/inquirer": "^9.0.6",
    "@types/node": "^20.8.9",
    "@types/nprogress": "^0.2.2",
    "bun-types": "^1.0.7",
    "hono": "^3.9.0",
    "htmx.org": "^1.9.6",
    "hwy": "workspace:*",
    "idiomorph": "^0.0.9",
    "npm-run-all": "^4.1.5",
    "nprogress": "^0.2.0",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "wrangler": "^3.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hwy-js/hwy",
    "directory": "packages/create-hwy"
  },
  "homepage": "https://hwy.dev",
  "bugs": "https://github.com/hwy-js/hwy/issues"
}
